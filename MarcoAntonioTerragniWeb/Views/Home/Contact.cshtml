                    <form class="contact-comments js-Mailer" method="post">
                        <div class="row">

                            <div class="col-md-6 ">

                                <div class="form-group">
                                    <!-- Name -->
                                    <input type="text" name="name" class=" form-control" placeholder="Nombre *" maxlength="100" required data-error="Debes ingresar el nombre">
