                                </div>
                                <div class="form-group">
                                    <!-- Subject -->
                                    <input type="text" name="subject" class=" form-control" placeholder="Asunto" maxlength="100">
                                </div>
                            </div>

                            <div class="col-md-6 form-group">
                                <div class="form-group">
                                    <!-- Comment -->
                                    <textarea name="comments" class="cmnt-text form-control" placeholder="Mensaje" maxlength="400"></textarea>
                                </div>
                                <div class="form-group full-width">
                                    <button type="submit" class="btn btn-small btn-dark-solid ">Enviar mensaje</button>
                                </div>
